<div>
    <div style="@ElementStyle" class="alert alert-info">@Title</div>

    <GrandChildComponent></GrandChildComponent>
    <span>
        @if (ChildContent == null)
        {
            @Child2Content
        }
        else
        {
            @ChildContent
        }
    </span>
</div>


@code {

    [CascadingParameter]
    public string? ElementStyle { get; set; }

    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; } = null!;

    [Parameter]
    public RenderFragment Child2Content { get; set; } = null!;

}